#!/usr/bin/env bash
# This script configures the server to run Nginx on port 80

# Install Nginx if it's not installed
if ! command -v nginx &> /dev/null; then
    sudo apt-get update
    sudo apt-get install -y nginx
fi

# Create a new Nginx configuration file for listening on all IPs
sudo bash -c 'cat > /etc/nginx/sites-available/000-default.conf' << EOL
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    server_name _;

    location / {
        try_files $uri $uri/ =404;
    }
}
EOL

# Remove the default Nginx configuration file
sudo rm /etc/nginx/sites-enabled/default

# Create a symbolic link to the new configuration file
sudo ln -s /etc/nginx/sites-available/000-default.conf /etc/nginx/sites-enabled/

# Restart Nginx to apply the changes
sudo systemctl restart nginx

# Print the Nginx status to verify that it's running and listening on port 80
sudo systemctl status nginx
